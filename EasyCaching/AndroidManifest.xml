<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ua.easyCaching"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />
        <activity
            android:name=".LoginActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".MenuUserActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".MenuJuriActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".HideCacheActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".Map" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".StatisticsActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".RegisterActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".TwitterActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".ViewCompetitionsActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".MapCompetition" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".CreateCompetitionActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name=".ViewCachesActivity" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
    </application>

</manifest>